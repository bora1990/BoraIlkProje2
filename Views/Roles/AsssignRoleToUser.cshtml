
@{
    ViewData["Title"] = "AsssignRoleToUser";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
@model List<RoleAssignVM>

<h1>Kullanıcıya rol atama</h1>

<form asp-action="AsssignRoleToUser" asp-route-userId="@ViewBag.userId" method="post">

    @for(int i=0;i<Model.Count;i++){

        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="@Model[i].Exist">
            <label class="form-check-label" for="flexCheckChecked">
                @Model[i].Name
            </label>
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="hidden" asp-for="@Model[i].Id" />

        </div>

    }
    <div class="form-group mt-3">
        <input type="submit" value="Rol ata"  class="btn btn-primary"/>
    </div>

</form>

<div class="mt-3">
    <a asp-controller="Admin" asp-action="Users">Kullanıcı Listesine Geri Dön</a>
</div>